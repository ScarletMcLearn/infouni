<!--welcome-->
<div class="signup">
	<div class="container">
		<div class=" agile-welcome">
			<div class="text-w3">
				<h4>welcome to our university finder</h4>
				<p>Sign Up to join the biggest online education communtiy</p>
            </div>
                
			<div class="clearfix"></div>
		</div>
         <div class="agile-contact">
		<div class="map1">
			
				<input placeholder="First Name" name="Name" class="name" type="text" id="first_name" required=""><br>
				<input placeholder="Last Name" name="Name" class="name" type="text" id="last_name" required="" ><br>
                <input placeholder="E-mail" name="Name" class="name" type="text" id="email" required=""><br>
				<input placeholder="Username" name="Name" class="name" type="text" id="username" required="" ><br>
                <input placeholder="Password" name="Name" class="name" type="password" id="pass" required=""><br>
				<input placeholder="University Name(optional)" name="Name" class="name" id="uni_name" type="text"><br>
				<button id="submit">Submit </button>
				
				<script type='text/javascript'>
				
					var newUser={firstName:"",lastName:"",email:"",username:"",password:"",uniName:""};
					$('#submit').click(function(){
						newUser.firstName=$('#first_name').val();
						newUser.lastName=$('#last_name').val();
						newUser.email=$('#email').val();
						newUser.password=$('#pass').val();
						newUser.username=$('#username').val();
						newUser.uniName=$('#uni_name').val();
						 $.ajax({
		                    method: "POST",
		                    url: "/auth/signup",
		                    data: newUser
		                }).done(function(response){
		                    
		                    alert("Signed Up succesfully!");
		                    window.location.replace('/');
		                }).fail(function(response){
		                    alert(response.responseText);
		                });
						
						
						
					});
				</script>
		
		</div>
	</div>
